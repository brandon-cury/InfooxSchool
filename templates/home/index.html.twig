{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {% block sliderPrincipale %}
        <div id="sliderPrincipaleInfooxJs" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="5000">
                    <img src="{{ asset("slider/pc/image1.png") }}" class="d-block w-100" alt="infoox bienvenu">
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="{{ asset("slider/pc/image3.png") }}" class="d-block w-100" alt="infoox appel">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset("slider/pc/image2.png") }}" class="d-block w-100" alt="infoox bienvenu aux élèves">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#sliderPrincipaleInfooxJs" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#sliderPrincipaleInfooxJs" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

    {% endblock %}
        <h1>Bienvenue</h1>
        <div {{ vue_component('Hello', {name:"dadad"}) }}></div>
{% endblock %}
{% block js %}
